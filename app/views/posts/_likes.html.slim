.d-flex.align-items-center
  - if like_id
      = button_to post_like_path(post, like_id),
                type: 'button',
                class: 'btn btn-outline-light pe-1',
                method: :delete,
                data: { disable_with: render('shared/loading_spinner', color: 'text-danger', margins: 'me-1') } do
        i.fa-solid.fa-heart.text-danger.me-1
  - else
      = button_to post_likes_path(post),
                  type: 'button',
                  class: 'btn btn-outline-light pe-1',
                  method: :post,
                  data: { disable_with: render('shared/loading_spinner', color: 'text-danger', margins: 'me-1') } do
        i.fa-regular.fa-heart.text-danger.me-1
  span.text-secondary.fw-lighter
    = post.post_likes_count
